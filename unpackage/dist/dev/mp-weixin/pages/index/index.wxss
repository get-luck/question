page {
  background: #f5f6f7;
}
.swiper {
  height: 350rpx;
}
.swiper .swiper-item {
  width: 100%;
  height: 100%;
}
.swiper .swiper-item image {
  width: 100%;
  height: 100%;
}
.question-wrap {
  background: #fff;
}
.question {
  height: 350rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.question .left,
.question .right {
  width: 205rpx;
}
.question .left image,
.question .right image {
  width: 50rpx;
  height: 50rpx;
}
.question .center {
  width: 220rpx;
  height: 220rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.question .center .progress {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: linear-gradient(to bottom right, #59b6fb, #40abfa);
}
.question .center .progress.blue {
  background: linear-gradient(to bottom right, #1bd0ad, #1bd0ad);
}
.question .center .progress .progress-wrap {
  line-height: 24px;
  color: white;
}
.question .center .progress .progress-wrap text {
  display: block;
  text-align: center;
}
.question .center .progress .progress-wrap .progress-title {
  font-size: 33rpx;
}
.question .center image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.question .button {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.panel {
  height: 80rpx;
}
.panel .panel-item image {
  width: 40rpx;
  height: 40rpx;
}
.panel .panel-item .panel-left {
  display: flex;
  align-items: center;
}
.panel .panel-item .panel-left text {
  margin-left: 20rpx;
}
.classify {
  margin: 10px;
}

