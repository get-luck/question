page,
.container {
  height: 100%;
}
.scroll-box {
  display: flex;
  font-size: 40rpx;
  height: 100%;
}
.scroll-box .left {
  width: 300rpx;
  border-right: 1px solid #ddd;
  box-sizing: border-box;
}
.scroll-box .left .active {
  color: red;
  position: relative;
  background-color: #EEEEEE;
}
.scroll-box .left .active::after {
  content: '';
  width: 3px;
  height: 60rpx;
  background-color: red;
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  left: 0;
}
.scroll-box .left view {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
}
.scroll-box .right .itemBox {
  display: flex;
}
.scroll-box .right .itemBox .item {
  width: 240rpx;
  margin: 10px;
}
.scroll-box .right .itemBox .subjectBox {
  border-radius: 20rpx;
  border: 1px solid #0081FF;
  display: flex;
  flex: 2;
  height: 140rpx;
  width: 240rpx;
  flex-direction: column;
  align-items: center;
}
.scroll-box .right .itemBox .cureent {
  background: rgba(170, 255, 255, 0.6);
}

